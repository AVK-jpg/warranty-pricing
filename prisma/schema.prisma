// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Model {
  id          Int      @id @default(autoincrement())
  name        String
  baseCost    Float
  termYears   Int
  marginPct   Float?   // optional
  resultPrice Float
  createdAt   DateTime @default(now())
}
